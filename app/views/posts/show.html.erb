<h1><%= @post.title %></h1>
<p><%= @post.body %> </p>
<hr>
<%= link_to "Редактировать",  edit_post_path(@post), :class => "btn btn-warning"%>
<%= link_to "Удалить пост", post_path(@post), method: :delete, :class => 'btn btn-outline-primary' %>
<hr>
<h2>Все комментарии:</h2>
<% @post.comments.each do |comment| %>
  <div class = 'alert alert-light'>
    <p><strong><%= comment.username %></strong>: <%=comment.body %></p>
  </div>
<% end %>

<hr>
<div class="content">
<h4>Комментарии:</h4>
<%= simple_form_for([@post, @post.comments.build]) do |f|%>

  <p>
   <br>
    <%=f.input(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    <br>
    <%=f.input(:body, {:class => 'form-control'}) %>
  </p>

  <p>
    <%=f.submit("Добавить комментарий", {:class => 'btn, btn-warning'}) %>
  </p>
    </div>
<%end%>
